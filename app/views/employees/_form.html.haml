= form_for @employee do |f|
  -if @employee.errors.any?
    #error_explanation
      %h2= "#{pluralize(@employee.errors.count, "error")} prohibited this employee from being saved:"
      %ul
        - @employee.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :marital_status
    = f.text_field :marital_status
  .field
    = f.label :habits
    = f.text_field :habits
  .actions
    = f.submit 'Save'
